def rewrite_html_content(content, base_url, proxy_base):
    """Rewrite URLs in HTML content to route through proxy"""
    # Rewrite href attributes
    content = re.sub(
        r'href=["\']([^"\']+)["\']',
        lambda m: f'href="{proxy_base}/proxy?url={quote(urljoin(base_url, m.group(1)), safe="")}"',
        content
    )
    # Rewrite src attributes
    content = re.sub(
        r'src=["\']([^"\']+)["\']',
        lambda m: f'src="{proxy_base}/proxy?url={quote(urljoin(base_url, m.group(1)), safe="")}"',
        content
    )
    # Rewrite action attributes
    content = re.sub(
        r'action=["\']([^"\']+)["\']',
        lambda m: f'action="{proxy_base}/proxy?url={quote(urljoin(base_url, m.group(1)), safe="")}"',
        content
    )
    # Add base tag
    base_tag = f'<base href="{proxy_base}/proxy?url={quote(base_url, safe="")}">'
    if '<head>' in content:
        content = content.replace('<head>', f'<head>{base_tag}')
    elif '<html>' in content:
        content = content.replace('<html>', f'<html><head>{base_tag}</head>')
    return content

def rewrite_css_content(content, base_url, proxy_base):
    """Rewrite URLs in CSS content"""
    def replace_url(match):
        original_url = match.group(1).strip('"\'')
        absolute_url = urljoin(base_url, original_url)
        return f'url("{proxy_base}/proxy?url={quote(absolute_url, safe="")}")'
    return re.sub(r'url\(([^)]+)\)', replace_url, content)

@app.route('/')
def index():
    """Home page with URL input form"""
    return render_template_string(PROXY_TEMPLATE)

@app.route('/proxy', methods=['GET', 'POST'])
def proxy():
    """Main proxy endpoint"""
    target_url = request.args.get('url')
    
    if not target_url:
        return redirect(url_for('index'))
    
    target_url = unquote(target_url)
    
    if not target_url.startswith(('http://', 'https://')):
        target_url = 'https://' + target_url
    
    try:
        headers = {
            'User-Agent': request.headers.get('User-Agent', 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36'),
            'Accept': 'text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8',
            'Accept-Language': 'en-US,en;q=0.5',
        }
        
        if request.method == 'POST':
            resp = requests.post(target_url, data=request.form, headers=headers, timeout=30, allow_redirects=True)
        else:
            resp = requests.get(target_url, headers=headers, timeout=30, allow_redirects=True, stream=True)
        
        content_type = resp.headers.get('Content-Type', 'text/html')
        proxy_base = f"{request.scheme}://{request.host}"
        
        if 'text/html' in content_type:
            content = resp.content.decode('utf-8', errors='ignore')
            modified = rewrite_html_content(content, target_url, proxy_base)
            return Response(modified, status=resp.status_code, content_type=content_type)
        
        elif 'text/css' in content_type:
            content = resp.content.decode('utf-8', errors='ignore')
            modified = rewrite_css_content(content, target_url, proxy_base)
            return Response(modified, status=resp.status_code, content_type=content_type)
        
        else:
            return Response(resp.content, status=resp.status_code, content_type=content_type)
            
    except Exception as e:
        return f'<div style="padding:40px;text-align:center;"><h1>Error</h1><p>{str(e)}</p><a href="/">‚Üê Back</a></div>', 500

if __name__ == '__main__':
    print("üöÄ Web Proxy Server starting...")
    print("üìç http://localhost:5000")
    print("üîó http://localhost:5000/proxy?url=https://example.com")
    app.run(host='0.0.0.0', port=5000, debug=True, threaded=True)
